#define MyAppName "Filmotéka"
#define MyAppVersion "1.4.2"
#define MyAppPublisher "50PSoftware"
#define MyAppURL "https://adaraneo.net/software"
#define MyAppExeName "Filmoteka WPF.exe"

[Setup]
; NOTE: The value of AppId uniquely identifies this application. Do not use the same AppId value in installers for other applications.
; (To generate a new GUID, click Tools | Generate GUID inside the IDE.)
AppId={{8576B26B-8374-48E4-B8F4-1E4774EE27F8}
AppName={#MyAppName}
AppVersion={#MyAppVersion}
;AppVerName={#MyAppName} {#MyAppVersion}
AppPublisher={#MyAppPublisher}
AppPublisherURL={#MyAppURL}
AppSupportURL={#MyAppURL}
AppUpdatesURL={#MyAppURL}
DefaultDirName={autopf}\{#MyAppPublisher}\{#MyAppName}
DisableDirPage=yes
DefaultGroupName={#MyAppPublisher}\{#MyAppName}
DisableProgramGroupPage=yes
LicenseFile=V:\VOJTA\SOUBORY\INSTALÁTORY\Moje\Licence.txt
OutputBaseFilename=setup{#MyAppName}{#MyAppVersion}
SetupIconFile=V:\VOJTA\OBRÁZKY\50P_light-green-ICON.ico
