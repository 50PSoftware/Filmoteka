Name: "alone"; Description: "Umožnit spouštìní aplikace ze Start Menu"; GroupDescription: "Volby:"; Flags: exclusive

[Files]
Source: "Filmoteka WPF\bin\Release\Filmoteka WPF.exe"; DestDir: "{app}"; Flags: ignoreversion
